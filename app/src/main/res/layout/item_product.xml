<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_card_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="产品一"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_15"/>

            <TextView
                style="@style/BlueTag"
                android:text="新手必投"/>

            <TextView
                style="@style/RedTag"
                android:text="新手必投"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_card_big_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/ll_card_title"
            android:layout_below="@id/ll_card_title"
            android:layout_marginTop="20dp"
            android:text="10"
            android:textColor="@color/text_red"
            android:textSize="35dp"/>

        <TextView
            android:id="@+id/tv_card_little_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_card_big_rate"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@id/tv_card_big_rate"
            android:text="% +0.32%*"
            android:textColor="@color/text_red"
            android:textSize="@dimen/text_size_13"/>

        <TextView
            android:id="@+id/tv_bottom_invest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tv_card_big_rate"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_btn_selecter_blue_solid"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:text="@string/card_invest"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_card_toast_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_card_big_rate"
            android:layout_below="@id/tv_card_big_rate"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:text="@string/card_toast_left"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_12"/>

        <TextView
            android:id="@+id/tv_card_toast_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/tv_bottom_invest"
            android:layout_alignTop="@id/tv_card_toast_left"
            android:text="@string/card_toast_right"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_12"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>